<div class="page-header">
  <%= link_to new_story_path, class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Story
  <% end %>
  <h3 Listing>Iron News</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><h6>Story#</h6></th>
        <th><h6>Title</h6></th>
        <th><h6>Contributor email</h6></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="table-body table-striped table-hover">
      <%- @stories.each do |story| %>
      <tr>
        <td><small><%= story.number %></small></td>
        <td><small><%= story.title %></small></td>
        <td><small><%= story.email %></small></td>
        <td>
          <%= link_to story do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_story_path(story) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
