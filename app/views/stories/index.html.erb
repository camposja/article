<div class="page-header">
  <h3 Listing>| Iron News |</h3>

  <%= link_to "New Story", new_story_path, :class => 'btn btn-success pull-right' %>
  <br><br>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <strong></strong>
        <th><strong>Story#</strong></th>
        <th><strong>Title</strong></th>
        <th><strong>Contributor's email</strong></th>
        <th><strong>Published on</strong></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody >
      <%- @stories.each_with_index do |story, index| %>
      <tr>
        <td><small><%= index + 1 %></small></td>
        <td><small><%= link_to story.title, story.link %></small></td>
        <td><small><%= story.email %></small></td>
        <td><small><%= story.created_at.to_date.to_formatted_s(:long) %></small></td>
        <td>
          <%= link_to story do %>
            <button type="button" class="btn-group btn-default btn-s">View <span class="glyphicon glyphicon-home" aria-hidden="true"></span></button>
          <% end %>
        </td>
        <td>
          <%= link_to edit_story_path(story) do %>
            <button type="button" class="btn-group btn-default btn-s">Edit</button>
          <% end %>
        </td>
        <td>
          <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <button type="button" class="btn-group btn-default btn-s">Delete <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
